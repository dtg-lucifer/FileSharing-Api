<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fill Zilla</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap');

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 3rem;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            background-color: lightgrey;
        }

        .container {
            background-color: #60A5FA;
            border-radius: 2rem;
            box-shadow: 0px 10px 15px -3px rgba(0, 0, 0, 0.3);
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 15rem;
        }

        .file__container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 50px;
            margin: 1rem;
            padding: 0 10rem;
        }

        .pass__container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin: 1rem;
            padding: 0 10rem;
        }

        form label {
            margin: 1rem;
        }

        form input[type="password"] {
            min-height: 2rem;
            min-width: 74%;
            font-size: 15px;
            border: none;
            border-radius: 5px;
            padding: 10px 7px;
        }

        input:not([type="password"]) {
            font-size: 15px;
        }

        input[type="password"]:focus {
            outline: none;
        }

        button {
            border: none;
            background-color: rgb(232, 227, 227);
            min-width: 70%;
            padding: 1rem;
            border-radius: .5rem;
            cursor: pointer;
            font-size: 15px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all .25s;
            box-shadow: 0px 10px 15px -3px rgba(0, 0, 0, 0.3);
        }

        button:hover {
            background-color: rgb(198, 195, 195);
        }

        .container__bottom {
            background-color: #60A5FA;
            border-radius: 2rem;
            box-shadow: 0px 10px 15px -3px rgba(0, 0, 0, 0.3);
            min-width: 50%;
            min-height: 20%;
            padding: 4rem 7rem;
        }

        #link {
            background-color: #fff;
            border: none;
            border-radius: 5px;
            padding: 1rem;
            width: 70%;
            font-size: 13px;
            font-weight: 400;
        }

        #link:focus {
            outline: none;
        }

        p#copy {
            background-color: #fff;
            padding: 1rem;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            border-radius: 5px;
            box-shadow: 0px 10px 15px -3px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>

<body>
    <div class="container">
        <form action="/upload" method="post" enctype="multipart/form-data">
            <div class="file__container">
                <label for="file">FILE</label>
                <input type="file" name="file" id="file" required>
            </div>
            <div class="pass__container">
                <label for="password">PASSWORD</label>
                <input type="password" name="password" id="password">
            </div>
            <button type="submit">Share</button>
        </form>
    </div>
    <div class="container__bottom">
        <div class="link__container" style="display: flex; align-items: center; justify-content: space-between;">
            FILE LINK

            <input readonly id="link" align="center"
                value="<% if (locals.fileLink !=null) {%><%= locals.fileLink %><% }%>">

            <p id="copy" align="center" onclick="copy()">Copy</p>
        </div>
    </div>
</body>
<script>
    const copy = (e) => {
        let text = document.getElementById("link")
        text.select()
        text.setSelectionRange(0, 99999)
        navigator.clipboard.writeText(text.value);
    }
</script>

</html>